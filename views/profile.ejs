<!doctype html>
<html>
<head>
    <title>Profile</title>
</head>
<body>
    <ul class="navBar">
        <li><a href = "/logout">Logout</a></li>
    </ul>

    <h1>Profile</h1>
    <p><%= session.message %></p>
    <p>Welcome to your profile, <%= user.email %>.</p>
    
    <h2>Your Resumes</h2>
    <ul>
        <% for (var i=0; i < resumes.length; i++) { %>
            <li>
                <%= resumes[i]._id %>
            </li>
            <li class="title">
                Title: <%= resumes[i].title %> 
            </li>
            <li class="content">
                Content: <%= resumes[i].content %>
            </li>
            <li class="params">
                Created At: <%= resumes[i].createdAt %> | Updated At: <%= resumes[i].updatedAt %>
            </li>
            <li>
                <a href="/resume/<%= resumes[i]._id %>">Details</a>
                <a href="/resume/edit/<%= resumes[i]._id %>">Edit</a>
                <form action="/resume/delete/<%= resumes[i]._id %>?_method=DELETE" method="post">
                    <button type="submit">Delete</button>
                </form>
                -----------
            </li>
        <% } %>
    </ul>

    <a href="/resume/new">New Resume</a>

</body>
</html>