<!doctype html>
<html>
<head>
    <title>Login</title>
</head>
<body>
    <ul class="navBar">
        <li><a href = "/">Home</a></li>
        <li><a href = "/register">Register</a></li>
    </ul>

    <h1>Login</h1>
    <h2><%= message %></h2>

    <form action="/login" method="post">
        <div class="form-group">
            <label>Email</label>
            <input type="text" name="email">
        </div>
        <div class="form group">
            <label>Password</label>
            <input type="password" name="password">
        </div>

        <button type="submit">Submit</button>
    </form>
</body>
</html>